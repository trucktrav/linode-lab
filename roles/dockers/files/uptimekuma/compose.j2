networks:
  {{ dockers_lan_name }}:
    external: true

services:
  uptime_kuma:
    image: louislam/uptime-kuma:1
    container_name: uptime_kuma
    volumes:
      - '{{ dockers_path }}{{ dockers_uptimekuma_data_folder }}:/app/data'
    restart: always
    ports:
      - "3001:3001"
    networks:
      {{ dockers_lan_name }}:
        ipv4_address: {{ dockers_uptimekuma_ip }}

